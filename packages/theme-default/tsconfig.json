  "include": [
    "src/**/*",
    "../create-react-resume/template-typescript/src/elements/Link.tsx",
    "../create-react-resume/template-typescript/src/elements/H6.tsx",
    "../create-react-resume/template-typescript/src/elements/H4.tsx",
    "../create-react-resume/template-typescript/src/elements/H3.tsx",
    "../create-react-resume/template-typescript/src/elements/H5.tsx",
    "../create-react-resume/template-typescript/src/elements/H2.tsx",
    "../create-react-resume/template-typescript/src/elements/H1.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
